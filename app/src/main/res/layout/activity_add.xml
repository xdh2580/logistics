<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView12" tools:text="新增货品"
                android:textSize="20sp" android:textAlignment="center"/>
        <TextView
                android:text="货品名称："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView13"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_add_good_name" android:hint="输入新增货品的名称"/>
        <TextView
                android:text="货品初始数量："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView16"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_add_good_init_quantity" android:hint="输入货品的初始数量"/>
        <TextView
                android:text="货品摆放的货架号："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView14"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_add_good_shelve" android:hint="输入货架号"/>
        <TextView
                android:text="货架隔层号："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView15"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_add_good_layer" android:hint="输入隔层号"/>
        <TextView
                android:text="数量单位："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView36"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_add_good_unit" android:hint="输入计量单位"/>
        <TextView
                android:text="补货提醒数："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView34"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_add_good_min" android:hint="输入补货提醒数量"/>
        <TextView
                android:text="堆积提醒数："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView35"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_add_good_max" android:hint="输入过多提醒数量"/>
        <Button
                android:text="添加货品"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_add_good"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>