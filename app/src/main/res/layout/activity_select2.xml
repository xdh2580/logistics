<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.logistics.SelectActivity2">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="订单拣货路径"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView27" android:textAlignment="center"
                android:textSize="20sp"/>
        <TextView
                android:text="请按以下顺序进行该订单的拣货任务："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView28"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/list_select_route">
            </ListView>
            <Button
                    android:text="暂时退出"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button_select2_quit"/>
            <Button
                    android:text="拣货完成"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button_select2_finish"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>