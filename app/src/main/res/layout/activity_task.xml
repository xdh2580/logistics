<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.logistics.TaskActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="模拟任务"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView29" android:textAlignment="center"
                android:textSize="20sp"/>
        <Button
                android:text="发布入库任务"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_task_in"/>
        <Button
                android:text="发布出库任务"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_task_out"/>
        <Button
                android:text="模拟随机生成拣货订单"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_task_random_select"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>