<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WarnActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="库存预警"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView33" android:textSize="20sp"
                android:textAlignment="center"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/list_warn">
        </ListView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="转到入库"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button_warn_in" android:layout_weight="1"/>
            <Button
                    android:text="转到出库"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button_warn_out" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="返回首页"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_warn_quit"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>