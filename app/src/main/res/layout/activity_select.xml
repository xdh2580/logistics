<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.logistics.SelectActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="订单拣货"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView24" android:textAlignment="center"
                android:textSize="20sp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="10dp">
        </LinearLayout>
        <TextView
                android:text="点击开始拣货，系统将自动为你生成最短的拣货路径"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView25"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="10dp">
        </LinearLayout>
        <TextView
                android:text="拣货订单列表："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView26"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="10dp">
        </LinearLayout>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/list_select_order"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>