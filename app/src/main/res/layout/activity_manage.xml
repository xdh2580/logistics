<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.logistics.ManageActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="货品管理"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView17" android:textAlignment="center"
                android:textSize="20sp"/>
        <TextView
                android:text="请选择要管理信息的货品："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView18"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/spinner_manage_select"/>
        <Button
                android:text="修改货品信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_manage_mod"/>
        <Button
                android:text="删除货品信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_manage_del"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>