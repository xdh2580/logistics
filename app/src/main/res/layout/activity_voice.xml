<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VoiceActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="语音助手"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView32" android:textSize="20sp"
                android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/text_result" android:hint="此处显示语音识别结果"/>
        <Button
                android:text="开始"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button"/>
        <TextView
                android:text="@string/voice_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_voice_show_result"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>